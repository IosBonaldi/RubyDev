<h1><%= @portfolio_item.title %></h1>
<span><%= @portfolio_item.subtitle %></span>
  <p>
    <%= link_to "Back", portfolios_path %>
     <%= link_to "Edit", edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %>
     <%= link_to 'Destroy', portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
  </p>
  <!---<a href="/portfolios/<%=@portfolio_item.id%>/edit">Edit</a>--->
    <p><%= @portfolio_item.body %></p>

    <h2>Technologies Used:</h2>

    <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
    <% end %>

    <!---Negative if could be replaced by unless--->
    <%= image_tag @portfolio_item.main_image if !@portfolio_item.thumb_image.nil? %>