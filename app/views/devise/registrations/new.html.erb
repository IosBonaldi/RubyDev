<div class="card bg-transparent border-light">
  <div class="card-body">



        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="row">
<div class="col-md-6">
            <div class="form-group text-left">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control bg-transparent text-white" %>
            </div>

            <div class="form-group text-left">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email", class: "form-control bg-transparent text-white" %>
            </div>

        </div>
        <div class="col-md-6">

            <div class="form-group text-left">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-transparent text-white" %>
            </div>

            <div class="form-group text-left">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-transparent text-white" %>
            </div>

            <div class="form-group text-right">
              <div class="auth-links">
                <%= render "devise/shared/links" %>
              </div>
              <%= f.submit "Sign up" , class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>

